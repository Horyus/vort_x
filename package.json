{
    "name": "ethvtx",
    "version": "2.0.0",
    "description": "Ethereum-Ready Redux Store Configuration",
    "main": "lib/index.js",
    "scripts": {
        "test:jest": "jest --verbose --notify --runInBand --coverage",
        "coverage:upload": "cat ./coverage/lcov.info | coveralls",
        "test:lint": "tslint --project .",
        "test:editorconfig": "editorconfig-cli",
        "build": "rm -rf lib && tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/horyus/ethvtx.git"
    },
    "keywords": [
        "ethereum",
        "redux",
        "dapp"
    ],
    "author": "Iulian Rotaru",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/horyus/ethvtx/issues"
    },
    "homepage": "https://github.com/horyus/ethvtx#readme",
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "@redux-saga/types": "^1.0.0-rc.0",
        "@types/jest": "^23.3.12",
        "@types/lodash": "^4.14.119",
        "@types/node": "^10.12.18",
        "@types/redux": "^3.6.0",
        "coveralls": "^3.0.2",
        "ganache-core": "2.5.3",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "linted": "^1.0.5",
        "lodash": "^4.17.11",
        "redux": "^4.0.1",
        "redux-saga": "^0.16.2",
        "solc": "0.5.0",
        "ts-jest": "^23.10.5",
        "tslint": "^5.12.1",
        "typescript": "^3.2.2",
        "web3": "1.0.0-beta.32",
        "websocket": "^1.0.28"
    },
    "peerDependencies": {
        "redux": "^4.0.1",
        "redux-saga": "^0.16.2"
    },
    "dependencies": {
        "bignumber.js": "^8.1.1",
        "eip55": "^1.0.3",
        "js-sha3": "^0.8.0"
    },
    "editorconfig-cli": [
        "./*.js",
        "./*.json",
        "./sources/**/*.ts"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run build && git status && editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
